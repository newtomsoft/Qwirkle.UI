<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
                    xmlns:viewModels="clr-namespace:Qwirkle.UI.Wpf.ViewModels"
                    xmlns:views="clr-namespace:Qwirkle.UI.Wpf.Views">

    <DataTemplate DataType="{x:Type viewModels:MainMenuViewModel}">
        <views:MainMenuView/>
    </DataTemplate>
    <DataTemplate DataType="{x:Type viewModels:GameViewModel}">
        <views:GameView/>
    </DataTemplate>
    <DataTemplate DataType="{x:Type viewModels:BoardViewModel}">
        <views:BoardView/>
    </DataTemplate>
    <DataTemplate DataType="{x:Type viewModels:RackViewModel}">
        <views:RackView/>
    </DataTemplate>

</ResourceDictionary>